<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:text="我的运动"
            android:textSize="30dp" />


    <LinearLayout android:background="#F7EED6"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginTop="100dp">
        <TextView
            android:id="@+id/jumptorecent"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="最近运动"
            android:layout_gravity="center_vertical"
            android:gravity="center"

            android:drawablePadding="10dp"/>
    </LinearLayout>
    <LinearLayout  android:background="#F7EED6"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
            android:id="@+id/jumptoresultlist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="运动记录"
            android:layout_gravity="center_vertical"
            android:gravity="center"

            android:drawablePadding="10dp"/>
    </LinearLayout>
    <LinearLayout  android:background="#F7EED6"
        android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView
            android:id="@+id/jumptoscore"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:text="运动积分"
            android:layout_gravity="center_vertical"
            android:gravity="center"

            android:drawablePadding="10dp"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/text" android:scaleType="centerCrop"
        android:background="@drawable/runningpic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>